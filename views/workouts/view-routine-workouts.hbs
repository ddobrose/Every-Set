<header class="d-flex justify-content-between align-items-center">
<h1>Routine Name</h1>
</header>

<ul class="list-group">
    {{#each workouts}}
    <li class="list-group-item d-flex justify-content-between">
<div>
    {{this.name}}: {{this.sets}} sets, {{this.repRangeLow}}-{{this.repRangeHigh}} reps 
</div>


<div class = "links">
    <a href="routines/{{this.routineId}}/workouts/{{this.id}}/edit" class="btn btn-info">Edit</a>
    <form action="routines/{{workouts.[0].routineId}}/workouts/{{this.id}}?_method=DELETE" method="POST" class="d-inline">
    <input type="submit" value="Delete" class="btn btn-danger"></form>
</div>
</li>
{{/each}}
</ul>
<a href="/routines/{{workouts.[0].routineId}}/workouts/new" class="btn btn-primary">Add Workout</a>