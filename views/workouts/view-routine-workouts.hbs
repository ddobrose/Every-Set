<header class="d-flex justify-content-between align-items-center mb-3">
<h1>{{routine.[0].name}}</h1>
</header>

<ul class="list-group">
    {{#each workouts}}
    <li class="list-group-item d-flex justify-content-between mb-5 border-top shadow">
<div>
    <h5>{{this.equipment}} {{this.name}}: {{this.sets}} sets</h5> 
    <p>{{this.repRangeLow}}-{{this.repRangeHigh}} reps each set</p> 
    {{!-- <p>Muscles Worked: {{this.muscleGroups}}</p> --}}
</div>


<div class = "links">
    <a href="/{{this.routineId}}/workouts/{{this.id}}/edit" class="btn btn-info">Edit</a>
    <form action="/{{this.routineId}}/workouts/{{this.id}}?_method=DELETE" method="POST" class="d-inline">
    <input type="submit" value="Delete" class="btn btn-danger"></form>
</div>
</li>
{{/each}}
</ul>
<a href="/{{routine.[0].id}}/workouts/new" class="btn btn-primary">Add Workout</a>
<a href="/">Back</a>